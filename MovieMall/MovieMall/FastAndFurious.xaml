                                <StackLayout>
                                    <Image Source="https://i.ibb.co/5h7CfDx/Picture7.png" HorizontalOptions="Center"/>
                                </StackLayout>
                                <Label Text="The Fast and the Furious" FontSize="25" FontAttributes="Bold" TextColor="Black" Margin="0,15,0,0"/>
